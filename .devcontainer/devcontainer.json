{
    "name": "Claude Dev Workspace",
    "image": "mcr.microsoft.com/devcontainers/base:debian",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "1.70"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "containerEnv": {
        "WORKSPACE_FOLDER": "${localWorkspaceFolder}",
        "DEVPOD_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
        "AGENTS_DIR": "${localWorkspaceFolder}/agents"
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y tmux htop && if [ -f ${WORKSPACE_FOLDER}/setup.sh ]; then chmod +x ${WORKSPACE_FOLDER}/setup.sh && ${WORKSPACE_FOLDER}/setup.sh; fi",
    "postStartCommand": "if [ -f ${WORKSPACE_FOLDER}/post-setup.sh ]; then chmod +x ${WORKSPACE_FOLDER}/post-setup.sh && ${WORKSPACE_FOLDER}/post-setup.sh; fi",
    "customizations": {
        "vscode": {
            "extensions": [
                "rooveterinaryinc.roo-cline",
                "vsls-contrib.gistfs",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "tmux-workspace": {
                        "path": "/bin/bash",
                        "args": ["-c", "if [ -f ${WORKSPACE_FOLDER}/tmux-workspace.sh ]; then ${WORKSPACE_FOLDER}/tmux-workspace.sh; else bash; fi"]
                    }
                },
                "terminal.integrated.defaultProfile.linux": "tmux-workspace"
            }
        }
    }
}
